<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.PhoenixHospital.doctors.dao.IDoctorsDao">
    <sql id="searchInDoc">
        <if test='!@org.apache.commons.lang3.StringUtils@isBlank(searchWord)'>
            AND (treatment_code=#{searchWord} OR dc_name=#{searchWord})
        </if>
    </sql>

    <select id="getDocList" resultType="com.PhoenixHospital.doctors.vo.DoctorsVO">
        SELECT *
        FROM doctors
        WHERE 1=1
        <include refid="searchInDoc"/>
    </select>
</mapper>